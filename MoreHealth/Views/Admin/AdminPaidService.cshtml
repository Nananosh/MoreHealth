<div id="grid"> </div>
<script>
    $("#grid").kendoGrid({
                dataSource: {
                    transport: {
                        read: "@Url.Action("GetAllPaidServices", "Admin")",
                        update: {
                            url: "@Url.Action("UpdatePaidService","Admin")",
                            dataType: "json",
                            type: "POST"
                        },
                        create:{
                            url: "@Url.Action("CreatePaidService", "Admin")",
                            dataType: "json",
                            type: "POST"
                        },
                        destroy: {
                            url: "@Url.Action("RemovePaidService", "Admin")",
                            dataType: "json",
                            type: "DELETE"
                        }
                    },
                    schema: {
                        model: {
                            id: "Id",
                            fields: {
                                Id: { from: "id", type: "number", editable: false},
                                ServiceName: { from: "serviceName", validation: {required: true }},
                                Description: { from: "description", validation: {required: true }},
                                Price: { from: "price", type: "number", validation: {required: true }},
                                ForeignPrice: { from: "foreignPrice", type: "number", validation: {required: true }}
                            }
                        }
                    },
                    pageSize: 20,
                    serverPaging: true,
                    serverFiltering: true,
                    serverSorting: true
                },
                height: 550,
                editable: "popup",
                // filterable: true,
                // sortable: true,
                pageable: true,
                toolbar: [
                    {name: "create"}
                ],
                columns: [
                    {
                        field:"Id",
                        filterable: false
                    },
                    {
                        field: "ServiceName",
                        title: "Название услуги"
                    }, 
                    {
                        field: "Description",
                        title: "Описание"
                    }, 
                    {
                        field: "Price",
                        title: "Обычная цена"
                    }, 
                    {
                        field: "ForeignPrice",
                        title: "Цена для иностранцев"
                    },
                    {
                        command: ["edit"]
                    },
                    {
                        command: "destroy"
                    }
                ]
            });
</script>