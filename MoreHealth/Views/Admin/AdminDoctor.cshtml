<div id="example">
    <div id="grid"></div>
    <script>
        $(document).ready(function() {
            $("#grid").kendoGrid({
                dataSource: {
                    transport: {
                        read: "@Url.Action("GetAllDoctors", "Admin")",
                        update: {
                            url: "@Url.Action("UpdateDoctor","Admin")",
                            dataType: "json",
                            type: "POST"
                        },
                        destroy: {
                            url: "@Url.Action("RemoveDoctor","Admin")",
                            dataType: "json",
                            type: "DELETE"
                        },
                        parameterMap: function(options, operation) {
                            if (operation === "update" || operation === "create") {
                                options.startWorkTimeEvenDay = options.startWorkTimeEvenDay.toLocaleString();
                                options.endWorkTimeEvenDay = options.endWorkTimeEvenDay.toLocaleString();
                                options.startWorkTimeOddDay = options.startWorkTimeOddDay.toLocaleString();
                                options.endWorkTimeOddDay = options.endWorkTimeOddDay.toLocaleString();
                            }
                            return options;
                        }
                    },
                    schema: {
                        model: {
                            id: "Id",
                            fields: {
                                Id: { editable: false, from: "id", type: "number" },
                                Specialization: { from: "specialization",nullable: true, validation: {required: true} }, 
                                SpecializationId: {from: "specializationId",nullable: true, validation: {required: true} },
                                Cabinet: { from: "cabinet",nullable: true, validation: {required: true} },
                                CabinetId: {from: "cabinetId",nullable: true, validation: {required: true} }, 
                                Name: { from: "name", validation: {required: true} },
                                Surname: {from: "surname", validation: {required: true} }, 
                                LastName: { from: "lastName", validation: {required: true }},
                                StartWorkTimeEvenDay: { from: "startWorkTimeEvenDay",type: "date", validation: {required: true }},
                                EndWorkTimeEvenDay: { from: "endWorkTimeEvenDay", type: "date", validation: {required: true }},
                                StartWorkTimeOddDay: { from: "startWorkTimeOddDay", type: "date", validation: {required: true }},
                                EndWorkTimeOddDay: { from: "endWorkTimeOddDay", type: "date", validation: {required: true }},
                                Weekend: { from: "weekend", validation: {required: true }},
                            }
                        }
                    },
                    pageSize: 20,
                    serverPaging: true,
                    serverFiltering: true,
                    serverSorting: true
                },
                height: 550,
                editable: {
                    mode: "popup",
                    window: {
                        scrollable: false,
                        resizable: false,
                    }
                },
                // filterable: true,
                // sortable: true,
                pageable: true,
                columns: [
                    {
                        field:"Id",
                        filterable: false
                    },
                    {
                        field: "Specialization.specializationName",
                        title: "Специальность",
                        editor: specializationEditor,
                        template: function(dataItem) {
                            if (dataItem.Specialization == null)
                                return '';
                            else
                                return dataItem.Specialization.specializationName;
                        }
                    },
                    {
                        field: "Cabinet.cabinetNumber",
                        title: "Кабинет",
                        editor: cabinetEditor,
                        template: function(dataItem) {
                            if (dataItem.Cabinet == null)
                                return '';
                            else
                                return dataItem.Cabinet.cabinetNumber;
                        }
                    }, 
                   {
                       field: "StartWorkTimeEvenDay",
                       title: "Четные начало",
                       editor: startWorkTimeEvenDayEditor,
                       format: "{0:HH:mm}"
                   }, 
                   {
                       field: "EndWorkTimeEvenDay",
                       title: "Четные конец",
                       editor: endWorkTimeEvenDayEditor,
                       format: "{0:HH:mm}"
                   }, 
                   {
                       field: "StartWorkTimeOddDay",
                       title: "Нечётные начало",
                       editor: startWorkTimeOddDayEditor,
                       format: "{0:HH:mm}"
                   }, 
                   {
                       field: "EndWorkTimeOddDay",
                       title: "Нечётные конец",
                       editor: endWorkTimeOddDayEditor,
                       format: "{0:HH:mm}"
                   }, 
                   {
                       field: "Weekend",
                       title: "Выходные"
                   },
                    {
                        field: "Name",
                        title: "Имя"
                    }, 
                    {
                        field: "Surname",
                        title: "Фамилия"
                    },
                    {
                        field: "LastName",
                        title: "Отчество"  
                    },
                    {
                        command: "edit", 
                    },
                    {
                        command: "destroy"
                    },
                    {
                        command: { text: "Добавить талоны", click: editTalons }
                    }
                ]
            });
        });
        
        function editTalons(e){
                   e.preventDefault();
                   var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
                   var redirectUrl = "@Url.Action("AddAppointmentByDoctor","Appointment")" + `/?id=${dataItem.Id}`
                   console.log(redirectUrl)
                   window.location.replace(redirectUrl);
                }
        
        function startWorkTimeEvenDayEditor(container, options) {
            $('<input required name="StartWorkTimeEvenDay">')
                .appendTo(container)
                .kendoTimePicker({
                    timezone: "Europe/Minsk",
                    value: new Date(),
                    componentType: "modern"
                });
        }
        
        function endWorkTimeEvenDayEditor(container, options) {
            $('<input required name="EndWorkTimeEvenDay">')
                .appendTo(container)
                .kendoTimePicker({
                    timezone: "Europe/Minsk",
                    value: new Date(),
                    componentType: "modern"
                });
        }
        
        function startWorkTimeOddDayEditor(container, options) {
            $('<input required name="StartWorkTimeOddDay">')
                .appendTo(container)
                .kendoTimePicker({
                    timezone: "Europe/Minsk",
                    value: new Date(),
                    componentType: "modern"
                });
        }
        
        function endWorkTimeOddDayEditor(container, options) {
            $('<input required name="EndWorkTimeOddDay">')
                .appendTo(container)
                .kendoTimePicker({
                    timezone: "Europe/Minsk",
                    value: new Date(),
                    componentType: "modern"
                });
        }
        
        function specializationEditor(container, options) {
            $('<input required name="SpecializationId">')
                .appendTo(container)
                .kendoDropDownList({
                    dataTextField: "specializationName",
                    dataValueField: "id",
                    height: 500,
                    dataSource: {
                        transport: {
                            read: {
                                url: "@Url.Action("GetAllSpecializations", "Admin")",
                                dataType: "json",
                                cache: false
                            }
                        }
                    }
                });
        }
        
        function cabinetEditor(container, options) {
            $('<input required name="CabinetId">')
                .appendTo(container)
                .kendoDropDownList({
                    dataTextField: "cabinetNumber",
                    dataValueField: "id",
                    height: 500,
                    dataSource: {
                        transport: {
                            read: {
                                url: "@Url.Action("GetAllCabinets", "Admin")",
                                dataType: "json",
                                cache: false
                            }
                        }
                    }
                });
        }
    </script>
</div>
