@model MoreHealth.ViewModels.Account.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Вход в MoreHealth";
}
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <title>@ViewData["Title"]</title>
</head>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>


<div class="container-fluid">
    <div class="row no-gutter">
        <div class="col-md-6 d-none d-md-flex bg-image"></div>
        <div class="col-md-6 bg-light">
            <a class="mt-5 d-flex justify-content-center" asp-action="Index" asp-controller="Home" style="text-decoration: none; color: black">
                <h1>MoreHealth</h1>
            </a>
            <div class="login d-flex align-items-center py-5">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-7 col-xl-6 mx-auto">
                            <h3 class="display-4">Войти</h3> <br>
                            <form class="form-group" method="post" asp-controller="Account" asp-action="Login"
                                  asp-route-returnUrl="@Model.ReturnUrl">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group mb-3">
                                    <input class="form-control rounded-pill border-0 shadow-sm px-4" asp-for="UserName" placeholder="Введите имя пользователя">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <input class="form-control rounded-pill border-0 shadow-sm px-4" asp-for="Password" placeholder="Введите пароль">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-block text-uppercase mb-2 rounded-pill shadow-sm" style="background: #7fb9cb">Войти</button>
                                <div class="text-center d-flex justify-content-between mt-4">
                                    <p>
                                        или &nbsp
                                        <a asp-action="Register" class="font-italic text-muted">
                                            <u>Создайте аккаунт</u>
                                        </a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .login,
    .image {
      min-height: 100vh
    }
    
    .bg-image {
      background-image: url('https://patients.smarterhealth.sg/wp-content/uploads/2019/11/Smarter-Health-General-Practitioner-or-Specialist-Doctor.jpg');
      background-size: cover;
      background-position: center center
    }
    body {
        margin: 0px;
    }
</style>